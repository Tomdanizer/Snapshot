extends layout

block content
    if error
        div(class="alert alert-#{ error }")
            button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
            strong Error
            div= message
    .col-xs-12.col-sm-6.col-md-6.col-lg-6.col-sm-offset-3.col-md-offset-3.col-lg-offset-3
        form(action='/login/authenticate', method='POST', role='form')
            legend Login
            .form-group
                label(for='username') Username
                input.form-control(type='text', name="username", id="username" placeholder='Username')
            .form-group
                label(for='password') Password
                input.form-control(type='password', name="password", id="password" placeholder='Password')                    
            div.text-center: button.btn.btn-primary(type='submit') Login 
            
