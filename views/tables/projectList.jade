form#project_list.table.form-list(action='/deleteproject', method='POST', role='form')
    div.table-responsive: table#projectTable.table.table-hover.table-striped
        thead
            tr
                th Project
                th Group
                th Base
                th Delete

        tbody
            each project in snapProjects
                if project.tprojects_active == 1
                    tr
                        td= project.tprojects_name
                        td= project.tprojects_group
                        td= project.tprojects_base
                        td: input(name=project.tprojects_name type='checkbox', value='')
                        
                else
                    tr.danger
                        td= project.tprojects_name
                        td= project.tprojects_group
                        td= project.tprojects_base
                        td: input(name=project.tprojects_name type='checkbox', value='')

      
    hr

    div.clearfix.col-xs-4.col-sm-4.col-md-4.col-lg-4
       div.small Color Key:
       span.label.label-danger Inactive
    div.clearfix: button(type="button" data-toggle='modal', href='#modal-confirm-delete-project').btn.btn-danger.col-xs-4.col-sm-4.col-md-4.col-lg-4 Delete

script
    $('#project_list table').dataTable();     